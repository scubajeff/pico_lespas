<!DOCTYPE html>
	<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{{ meta.title }} | {{ pages["index"].meta.title }}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
    {% if meta.description %}
    	<meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.author %}
    	<meta name="author" content="{{ meta.author }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

  <link rel="apple-touch-icon" sizes="180x180" href="{{ theme_url }}/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ theme_url }}/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ theme_url }}/images/favicon-16x16.png">
	<link rel="shortcut icon" href="{{ theme_url }}/images/favicon.ico">
	<!-- Google Fonts -->
	<link href='http://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic|Roboto:400,300,700' rel='stylesheet' type='text/css'>
	<!-- Animate -->
	<link rel="stylesheet" href="{{ theme_url }}/css/animate.css">
	<!-- Icomoon -->
	<link rel="stylesheet" href="{{ theme_url }}/css/icomoon.css">
	<!-- Bootstrap  -->
	<link rel="stylesheet" href="{{ theme_url }}/css/bootstrap.css">

	<link rel="stylesheet" href="{{ theme_url }}/css/style.css">

	<!-- Modernizr JS -->
	<script src="{{ theme_url }}/js/modernizr-2.6.2.min.js"></script>
	<script type="application/ld+json">
	{
	  "@context": "http://schema.org",
	  "@type": "BlogPosting",
	  "mainEntityOfPage":{
		"@type":"WebPage",
		"@id":"{{ current_page.url }}"
	  },
	  "headline": "{{ current_page.title }}",
	  "image": {
		"@type": "ImageObject",
		"url": "{{ meta.featured }}",
		"height": 636,
		"width": 947
	  },
	  "datePublished": "{{ meta.date }}",
	  "dateModified": "{{ meta.date }}",
	  "author": {
		"@type": "Person",
		"name": "{{ meta.author }}"
	  },
	  "description": "{{ meta.description }}"
	}
	</script>
	</head>

	<body>
	<header id="fh5co-header" itemscope="itemscope" itemtype="http://schema.org/WPHeader">
		<div class="container-fluid">
			<div class="row">
        {% if meta.social %}
        <ul class="fh5co-social">
        {% if meta.social == "cn" %}
          <li><a href="https://service.weibo.com/share/share.php?url={{ pages["index"].meta.host }}{{ current_page.url }}&title={{ meta.title }}&pic={{ meta.featured|link }}&content=utf-8" target="_blank"><i class="icon-sina-weibo"></i></a></li>
          <li><a href="https://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?url={{ pages["index"].meta.host }}{{ current_page.url }}&title={{ meta.title }}&pics={{ meta.featured|link }}&summary={{ meta.description|striptags }}" target="_blank"><i class="icon-qzone"></i></a></li>
          <li><a href="https://www.douban.com/recommend/?url={{ pages["index"].meta.host }}{{ current_page.url }}&title={{ meta.title }}" target="_blank"><i class="icon-douban"></i></a></li>
        {% else %}
          <li><a href="https://twitter.com/intent/tweet?url={{ pages["index"].meta.host }}{{ current_page.url }}&text={{ meta.title }}" target="_blank"><i class="icon-twitter"></i></a></li>
          <li><a href="https://www.facebook.com/sharer/sharer.php?u={{ pages["index"].meta.host }}{{ current_page.url }}&t={{ meta.title }}" target="_blank"><i class="icon-facebook2"></i></a></li>
        {% endif %}
        </ul>
        {% endif %}
				<div class="col-lg-12 col-md-12 text-left">
					<h1 id="fh5co-logo-left" itemprop="name"><a href="{{ base_url }}" itemprop="url"><span><i class="icon-circle-left"></i> {{ pages["index"].meta.title }}</span></a></h1>
				</div>
			</div>
		</div>
	</header>

	<div class="container-fluid">
		<div class="row fh5co-post-entry single-entry hfeed">
			<article class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0 hentry">
				<feature-image class="animate-box">
					<img src="{{assets_url}}/{{ meta.featured }}" alt="{{ meta.title }}" class="img-responsive">
				</feature-image>
				<h2 class="fh5co-article-title animate-box entry-title"><a href="{{ current_page.url }}">{{ meta.title }}</a></h2>
				<span class="fh5co-meta fh5co-date animate-box">{{ meta.date }}</span>
				<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-left content-article entry-content">
					{{ content }}
				</div>
			</article>
		</div>
	</div>

	<footer id="fh5co-footer" itemscope="itemscope" itemtype="http://schema.org/WPFooter">
    {% if not meta.disclaimer %}
		<p>
			<small>&copy; <script>document.write( new Date().getFullYear() );</script> {{ pages["index"].meta.author }}. All Rights Reserverd. Brought to you by <a href="https://github.com/scubajeff/lespas#readme" target="_blank" itemprop="designer">Les Pas <i class="icon-lespas_color"></i></a> <br> Theme based on original designe from <a href="http://freehtml5.co" target="_blank">FREEHTML5.co</a>, developed by: <a href="http://besrourms.github.io/" target="_blank" itemprop="creator">Safouan</a> and others.</small>
		</p>
    {% endif %}
	</footer>

	<!-- jQuery -->
	<script src="{{ theme_url }}/js/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script src="{{ theme_url }}/js/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script defer src="{{ theme_url }}/js/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script defer src="{{ theme_url }}/js/jquery.waypoints.min.js"></script>
	<!-- jQuery pause video outside viewport -->
	<script defer src="{{ theme_url }}/js/jquery.isInViewport.min.js"></script>
	<!-- Main JS -->
	<script src="{{ theme_url }}/js/main.js"></script>

	</body>
</html>
